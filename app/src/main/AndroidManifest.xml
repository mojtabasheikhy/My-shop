<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myshop">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Myshop">
        <activity android:name=".View.activity.cartlist"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Theme">

        </activity>
        <activity
            android:name=".View.activity.DetailProduct"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Theme" />
        <activity
            android:name=".View.activity.AddProduct"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Theme" />
        <activity
            android:name=".View.activity.Settings"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Theme" />
        <activity
            android:name=".View.activity.Main"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.activity.CompleteProfile"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Theme" />
        <activity
            android:name=".View.activity.Forgot_PassWord"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Theme" />
        <activity android:name=".View.activity.Basic" />
        <activity
            android:name=".View.activity.Register"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Theme" />
        <activity
            android:name=".View.activity.Login"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Theme">

        </activity>
        <activity
            android:name=".View.activity.Splash_Screen"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Theme" >
           </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>